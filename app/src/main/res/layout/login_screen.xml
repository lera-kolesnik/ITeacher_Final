<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.iteacher.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/welcomeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="20dp"
        android:text="Добро пожаловать"
        android:textColor="#4a4a4a"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/welcomeView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText,MissingConstraints,NotSibling,RtlHardcoded" />

    <TextView
        android:textColor="#bdbdbd"
        android:textSize="16sp"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите логин и пароль для входа"
        android:layout_marginLeft="74dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/welcomeView"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:background="@drawable/username"
        android:id="@+id/editText"
        android:layout_width="288dp"
        android:layout_height="45dp"
        android:ems="10"
        android:paddingLeft="60dp"
        android:inputType="textPersonName"
        android:text="Логин или email"
        android:layout_marginLeft="57dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

    <EditText
        android:background="@drawable/password"
        android:id="@+id/editText2"
        android:layout_width="288dp"
        android:layout_height="45dp"
        android:ems="10"
        android:paddingLeft="60dp"
        android:inputType="textPassword"
        android:text="Username"
        android:layout_marginLeft="58dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="213dp"
        android:layout_height="163dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/pp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="181dp"
        android:layout_height="125dp"
        android:background="@drawable/jidok"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        android:layout_marginLeft="112dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/iTeacherLogo"
        android:layout_width="374dp"
        android:layout_height="371dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122"
        app:srcCompat="@drawable/toto"
        tools:ignore="ContentDescription,MissingConstraints" />

</android.support.constraint.ConstraintLayout>